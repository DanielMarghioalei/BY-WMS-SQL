/************************************************DO NOT USE THIS, EVER, UNLESS YOU WANT TO GET FIRED***************************************************************/


expand environment variable
where variable = '$LESDIR'
|
[SELECT 'WMS' || UPPER(REPLACE(REPLACE(@VALUE, '/opt/jda/wm/', ''), '/les', '')) INSTANCE
   FROM DUAL]
|
[SELECT distinct TABLE_NAME
   FROM ALL_TAB_COLS
  WHERE OWNER = @INSTANCE]
/*
--Remove the comment here if your instance has the SYS_AUDIT table, which captures changes
|
[DROP
  table sys_audit]

*/
|
[drop
  table @table_name:raw] catch(@?);
